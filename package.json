{
  "name": "mindnote",
  "repository": {
    "type": "git",
    "url": "https://github.com/18thCentury/MindNote.git"
  },
  "version": "1.0.5",
  "description": "wwg works",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "clear": "rmdir /s /q dist dist-electron",
    "vue": "npm run build:renderer",
    "dev": "npx tsc --project tsconfig.node.json && electron .",
    "tsc_s": "npx tsc --project tsconfig.node.json",
    "test": "vitest run",
    "build:renderer": "vite build",
    "build:electron": "npx tsc --project tsconfig.node.json && electron-builder",
    "build": "npm run build:renderer && npm run build:electron",
    "start": "electron .",
    "test:watch": "vitest",
    "type-check": "vue-tsc --noEmit && tsc --project tsconfig.node.json --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "build": {
    "appId": "com.mindnote.app",
    "productName": "MindNote",
    "files": [
      "package.json",
      "dist/**/*",
      "dist-electron/**/*.js",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/**/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/**/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "asar": true,
    "compression": "maximum",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "18thCentury",
        "repo": "MindNote"
      }
    ],
    "fileAssociations": [
      {
        "ext": "mn",
        "name": "MindNote File",
        "role": "Editor",
        "icon": "app_icon.ico"
      }
    ]
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@toast-ui/editor": "^3.1.0",
    "@toast-ui/editor-plugin-table-merged-cell": "^3.1.0",
    "@vue-flow/background": "^1.3.2",
    "@vue-flow/controls": "^1.1.3",
    "@vue-flow/core": "^1.47.0",
    "@vue-flow/minimap": "^1.5.4",
    "@vue-flow/node-resizer": "^1.5.0",
    "adm-zip": "^0.5.16",
    "element-plus": "^2.11.5",
    "fast-xml-parser": "^5.3.3",
    "katex": "^0.16.27",
    "pinia": "^3.0.3",
    "uuid": "^13.0.0",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@pinia/testing": "^1.0.3",
    "@types/adm-zip": "^0.5.7",
    "@types/katex": "^0.16.7",
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^24.9.2",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.3.0",
    "lodash.debounce": "^4.0.8",
    "sass": "^1.93.2",
    "terser": "^5.44.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.1.8",
    "wait-on": "^9.0.1"
  }
}