{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist-electron",
    "types": [
      "node"
    ],
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "noEmit": false,
    "baseUrl": ".",
    "removeComments": true,
    "sourceMap": false
  },
  "include": [
    "electron/**/*.ts",
    "src/types/shared_types.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}